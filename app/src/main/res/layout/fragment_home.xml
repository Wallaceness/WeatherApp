<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.HomeFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addressContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/autocomplete_fragment"
        android:textSize="10pt"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        />
    <fragment
        android:id="@+id/autocomplete_fragment"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/backToLocation"
        app:layout_constraintTop_toBottomOf="@id/addressContainer"
        app:layout_constraintBottom_toTopOf="@+id/tabContainer"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:maxWidth="30dp"
        android:maxHeight="30dp"
        android:id="@+id/backToLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/autocomplete_fragment"
        app:layout_constraintTop_toTopOf="@id/autocomplete_fragment"
        app:layout_constraintBottom_toTopOf="@id/tabContainer"
        android:background="@drawable/back_arrow"
        android:padding="10dp"
        android:layout_marginEnd="20dp"
        />

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabContainer"
        app:layout_constraintTop_toBottomOf="@id/autocomplete_fragment"
        app:layout_constraintBottom_toTopOf="@id/fragContainer"
        android:background="@color/light_sky_blue"/>
    <FrameLayout
        android:id="@+id/fragContainer"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tabContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:layout_marginBottom="20dp">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
